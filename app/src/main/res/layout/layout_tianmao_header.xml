<?xml version="1.0" encoding="utf-8"?>
<neu.cn.swiperefreshdemo.customview.TianMaoRefreshHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/linear_layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_refresh"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/animation_list_refresh_tm_pull" />

        <TextView
            android:id="@+id/text_view_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="下拉刷新"
            android:textColor="#7b7b7b"
            android:textSize="12sp" />
    </LinearLayout>

</neu.cn.swiperefreshdemo.customview.TianMaoRefreshHeaderView>